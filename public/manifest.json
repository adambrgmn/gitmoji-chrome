{
  "manifest_version": 2,

  "version": "0.2.0",
  "name": "Gitmoji",
  "description": "Get gitmojis copied to clipboard",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html",
    "default_title": "Copy gitmoji"
  },

  "content_scripts": [
    {
      "matches": [
        "https://github.com/*",
        "https://gitlab.com/*",
        "https://bitbucket.org/*"
      ],
      "run_at": "document_idle",
      "js": ["content.js"]
    }
  ],

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "permissions": ["storage"]
}
